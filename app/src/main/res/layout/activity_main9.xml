<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FDFEFE"
    tools:context=".Main2Activity">

    <ImageView
        android:layout_width="372dp"
        android:layout_height="320dp"
        android:layout_gravity="center"
        android:src="@drawable/mazamitla1"
        />

    <TextView
        android:layout_width="376dp"
        android:layout_height="195dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="#CFCFCF"
        android:text="En esta imagen, visitamos el pueblo de mazamitla y estuvimos varios días hospedados en unas cabañas cercanas al pueblo. De los primeros viajes con mi sobrino."
        android:textAlignment="center"
        android:textColor="#050505"
        android:textSize="25dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/regresar"
        android:layout_width="228dp"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:text="Regresar"
        android:textSize="30dp"
        android:textColor="#FBFBFD"
        android:background="#0A5DEA"
        />



</GridLayout>